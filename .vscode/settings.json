{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true
    },
    "eslint.validate": [
        "javascript"
    ],
    "stylelint.customSyntax": "postcss-scss",
    "stylelint.validate": [
        "css",
        "less",
        "postcss",
        "scss"
    ],
    "stylelint.snippet": [
        "css",
        "less",
        "postcss",
        "scss"
    ],
}